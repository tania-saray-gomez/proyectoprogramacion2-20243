		@Test
	    public void testareasCirculo() {
	        double radio = 5;
	        double expected = Math.PI * radio * radio;
	        assertEquals(expected, calcularareas.calcularCirculo(radio), 0.0001);
	        
	        public static double calcularareasCirculo(double radio){
	    	       return Math.PI * Math.pow(radio, 5);
		}
	
